Checks: >
  -*,
  clang-analyzer-*,
  bugprone-*,
  cppcoreguidelines-*,
  modernize-*,
  -modernize-use-trailing-return-type,
  -clang-analyzer-include-order,
  performance-*,
  readability-*,
  misc-*
WarningsAsErrors: '*'
CheckOptions:
  - key: modernize-use-auto.MinTypeNameLength
    value: '3'
  - key: readability-braces-around-statements.ShortStatementLines
    value: '1'
HeaderFilterRegex: '.*'
FormatStyle: file